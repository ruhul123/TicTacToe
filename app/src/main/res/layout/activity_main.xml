<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player O"
        android:id="@+id/Player_O"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player_X"
        android:id="@+id/Player_X"
        android:layout_below="@+id/Player_O"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enternameO"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Player_O"
        android:layout_toEndOf="@+id/Player_O"
        android:hint="enter Player O"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enternameX"
        android:layout_alignBottom="@+id/Player_X"
        android:layout_toRightOf="@+id/Player_X"
        android:layout_toEndOf="@+id/Player_X"
        android:hint="enter Player X"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player O"
        android:id="@+id/Player_indicator"
        android:layout_below="@+id/enternameX"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a1"
        android:layout_below="@+id/Player_indicator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:onClick="a1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2"
        android:layout_alignTop="@+id/a1"
        android:layout_toRightOf="@+id/a1"
        android:layout_toEndOf="@+id/a1"
        android:onClick="a2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:layout_alignTop="@+id/a2"
        android:layout_toRightOf="@+id/a2"
        android:layout_toEndOf="@+id/a2"
        android:onClick="a3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_below="@+id/a1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="b1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_below="@+id/a2"
        android:layout_alignLeft="@+id/a2"
        android:layout_alignStart="@+id/a2"
        android:onClick="b2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_below="@+id/a3"
        android:layout_toRightOf="@+id/a2"
        android:layout_toEndOf="@+id/a2"
        android:onClick="b3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c1"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="c1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:onClick="c2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c3"
        android:layout_alignTop="@+id/c2"
        android:layout_toRightOf="@+id/c2"
        android:layout_toEndOf="@+id/c2"
        android:onClick="c3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/enternameX"
        android:layout_alignEnd="@+id/enternameX"
        android:layout_marginBottom="34dp"
        android:onClick="reset"/>
</RelativeLayout>
